<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_gravity="center"
    app:columnCount="3"
    app:orientation="horizontal"
    app:useDefaultMargins="true"
    android:background="@color/colorWhite">


    <Button
        android:id="@+id/keyboard_1"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="1"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

    />
    <Button
        android:id="@+id/keyboard_2"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="2"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_3"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="3"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_4"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="4"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_5"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="5"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_6"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="6"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_7"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="7"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_8"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="8"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <Button
        android:id="@+id/keyboard_9"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:text="9"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"

        />
    <ImageButton
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
        android:id="@+id/keyboard_biometric"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onPressKey"
        android:tint="@color/colorBlack"
        />
    <Button
        android:id="@+id/keyboard_0"
        android:layout_width="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:gravity="center"
        app:layout_gravity="center_vertical"
